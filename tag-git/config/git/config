[user]
  name = Stephen Brown II
  email = Stephen.Brown2@gmail.com

[core]
  editor = /usr/bin/vim
[help]
  autocorrect = 10

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  #   lgh = last ten commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.config/git/helpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.config/git/helpers && git_log_pretty"
  la = !git l --all
  lg = !git l --graph
  lgh = "!git l --graph | head"

[merge]
  tool = meld

[mergetool "meld"]
  path = /usr/bin/meld

[diff]
  tool = meld

[difftool]
  prompt = false

[push]
  default = simple
